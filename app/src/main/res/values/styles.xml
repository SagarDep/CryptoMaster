<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="divider">@color/divider</item>
        <item name="background">@color/background</item>
        <item name="text_title">@color/text_title</item>
        <item name="text_primary">@color/text_primary</item>
        <item name="text_secondary">@color/text_secondary</item>
        <item name="text_positive">@color/text_positive</item>
        <item name="text_negative">@color/text_negative</item>
        <item name="bottom_nav_background">@color/bottom_nav_background</item>
        <item name="bottom_nav_icon_selected">@color/bottom_nav_icon_selected</item>
        <item name="bottom_nav_icon_unselected">@color/bottom_nav_icon_unselected</item>
    </style>

    <!-- Base application theme. Dark. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="divider">@color/dark_divider</item>
        <item name="background">@color/dark_background</item>
        <item name="text_title">@color/dark_text_title</item>
        <item name="text_primary">@color/dark_text_primary</item>
        <item name="text_secondary">@color/dark_text_secondary</item>
        <item name="text_positive">@color/dark_text_positive</item>
        <item name="text_negative">@color/dark_text_negative</item>
        <item name="bottom_nav_background">@color/dark_bottom_nav_background</item>
        <item name="bottom_nav_icon_selected">@color/dark_bottom_nav_icon_selected</item>
        <item name="bottom_nav_icon_unselected">@color/dark_bottom_nav_icon_unselected</item>

    </style>

    <!--Swipe refresh loading icon colors-->
    <color name="swipe_refresh_green">#7cb342</color>
    <color name="swipe_refresh_red">#e53935</color>
    <color name="swipe_refresh_yellow">#fdd835</color>


    <!--Snackbar Util colors-->
    <color name="snackbar_error_background">#e53935</color>
    <color name="snackbar_notice_background">#fdd835</color>
    <color name="snackbar_success_background">#43A047</color>





    <!--TODO: Figure out what to do with these, kill em probably-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
